<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Keypad">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/keypad_text</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Keypad.Number">
        <item name="android:background">@drawable/keypad_ripple_effect</item>
    </style>

    <style name="Keypad.ControlButton">
        <item name="android:background">@drawable/keypad_ripple_effect_dark</item>
    </style>

</resources>
